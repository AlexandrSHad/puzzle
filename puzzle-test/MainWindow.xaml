<Window x:Class="puzzle_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:puzzle_test"
        mc:Ignorable="d"
        Title="MainWindow" Height="575" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid DataContext="{Binding BoardViewModel}" Margin="5" AllowDrop="True" MouseMove="gridBoard_MouseMove" DragDrop.Drop="gridBoard_Drop">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>

            <Image AllowDrop="True" Source="{Binding Tags[0].ImagePath}" />
            <Image AllowDrop="True" Source="{Binding Tags[1].ImagePath}" Grid.Column="1" />
            <Image AllowDrop="True" Source="{Binding Tags[2].ImagePath}" Grid.Column="2" />
            <Image AllowDrop="True" Source="{Binding Tags[3].ImagePath}" Grid.Row="1" />
            <Image AllowDrop="True" Source="{Binding Tags[4].ImagePath}" Grid.Row="1" Grid.Column="1" />
            <Image AllowDrop="True" Source="{Binding Tags[5].ImagePath}" Grid.Row="1" Grid.Column="2" />
            <Image AllowDrop="True" Source="{Binding Tags[6].ImagePath}" Grid.Row="2" />
            <Image AllowDrop="True" Source="{Binding Tags[7].ImagePath}" Grid.Row="2" Grid.Column="1" />
            <Image AllowDrop="True" Source="{Binding Tags[8].ImagePath}" Grid.Row="2" Grid.Column="2" />
        </Grid>

        <StackPanel Grid.Row="1">
            <Button Content="Move" Margin="5" Click="buttonMove_Click" />
        </StackPanel>
    </Grid>
</Window>
