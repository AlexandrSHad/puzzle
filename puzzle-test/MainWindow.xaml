<Window x:Class="puzzle_test.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:puzzle_test"
        mc:Ignorable="d"
        Title="MainWindow" Height="575" Width="525">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition />
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <Grid Margin="5" AllowDrop="True" MouseMove="gridBoard_MouseMove" DragDrop.Drop="gridBoard_Drop">
            <Grid.ColumnDefinitions>
                <ColumnDefinition />
                <ColumnDefinition />
                <ColumnDefinition />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition />
                <RowDefinition />
                <RowDefinition />
            </Grid.RowDefinitions>
        
            <Image Name="img1" AllowDrop="True" Source="./img/1.png" Stretch="Fill" />
            <Image Name="img2" AllowDrop="True" Source="./img/2.png" Grid.Column="1" />
            <Image Name="img3" AllowDrop="True" Source="./img/3.png" Grid.Column="2" />
            <Image Name="img4" AllowDrop="True" Source="./img/4.png" Grid.Row="1" />
            <Image Name="img5" AllowDrop="True" Source="./img/5.png" Grid.Row="1" Grid.Column="1" />
            <Image Name="img6" AllowDrop="True" Source="./img/6.png" Grid.Row="1" Grid.Column="2" />
            <Image Name="img7" AllowDrop="True" Source="./img/7.png" Grid.Row="2" />
            <Image Name="img8" AllowDrop="True" Source="./img/8.png" Grid.Row="2" Grid.Column="1" />
            <Image Name="img9" AllowDrop="True" Source="./img/9.png" Grid.Row="2" Grid.Column="2" />
        </Grid>

        <StackPanel Grid.Row="1">
            <Button Content="Move" Margin="5" Click="buttonMove_Click" />
        </StackPanel>
    </Grid>
</Window>
